generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["multiSchema"]
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
  schemas   = ["university"]
}

model Token {
  id        String   @id @default(uuid())
  clientId  String
  token     String   @unique
  active    Boolean  @default(true)
  createdAt DateTime @default(now())
  expiresAt DateTime

  @@schema("university")
}

model Audit {
  id        String   @id @default(uuid())
  tokenId   String
  score     Int
  grade     String
  result    String
  createdAt DateTime @default(now())

  @@schema("university")
}
